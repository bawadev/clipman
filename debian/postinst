#!/bin/bash
set -e

case "$1" in
    configure)
        # Update dconf database to apply keybinding
        if command -v dconf-update >/dev/null 2>&1; then
            dconf update
        fi

        # Try to reload GNOME settings for active users (if possible)
        for user in $(users 2>/dev/null | tr ' ' '\n' | sort -u); do
            if [ "$user" != "root" ]; then
                # Notify user they may need to log out/in for keybinding to take effect
                :
            fi
        done
        ;;
esac

#DEBHELPER#

exit 0
